@model PerfumePro.Models.PerfumeBrandViewModel
@{
    ViewData["Title"] = "Index";
}

<style>
    body{
        background-color:darkblue;
    }
    h1{
        color:yellow;
    }
    th,td{
        color:wheat;
    }
    p{
        font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        color:wheat;
    }
</style>

<h1>Catalogue</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Perfumes" asp-action="Index" method="get">
    <p>
        <select asp-for="PerfumeBrand" asp-items="Model.Brands">
            <option value="">All</option>
        </select>


        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Perfumes[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Perfumes[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Perfumes[0].Fragrance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Perfumes[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Perfumes[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Perfumes[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Perfumes[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Perfumes)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fragrance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
